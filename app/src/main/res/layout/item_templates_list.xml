<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/item_records_list_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:text="10500 usd"
        android:ellipsize="marquee"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sub_headline_text_size"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:singleLine="true" />

    <TextView
        android:id="@+id/item_records_list_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/sub_headline_text_size"
        android:textStyle="bold"
        tools:text="Category"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_records_list_amount" />

    <TextView
        android:id="@+id/item_records_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        tools:text="Burger"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sub_headline_text_size"
        android:textStyle="bold"
        android:ellipsize="marquee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_records_list_category"
        app:layout_constraintTop_toBottomOf="@+id/item_records_list_amount"
        android:singleLine="true" />

</android.support.constraint.ConstraintLayout>