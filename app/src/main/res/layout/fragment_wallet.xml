<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_fragment_wallet"
    android:layout_margin="8dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/balance_fragment_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textColor="@android:color/black"
        android:textSize="@dimen/headline_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:text="Balance"/>

    <TextView
        android:id="@+id/name_fragment_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/sub_headline_text_size"
        app:layout_constraintTop_toBottomOf="@+id/balance_fragment_wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        tools:text="Name"/>

    <TextView
        android:id="@+id/current_fragment_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text_size"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/name_fragment_wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        tools:text="Не Основной"/>

    <Button
        android:id="@+id/make_current_fragment_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_current"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textSize="@dimen/super_small_text_size"/>

</android.support.constraint.ConstraintLayout>